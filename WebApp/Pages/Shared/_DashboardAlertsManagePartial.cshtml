@model DashboardAlertsDTO
<div class="modal fade" id="ManageModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="ManageModalTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form method="post" asp-page-handler="Manage">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="CreatedBy" />
            <input type="hidden" asp-for="StartDate" />
            <input type="hidden" asp-for="EndDate" />
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ManageModalTitle">Dashboard Alert</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label asp-for="BackgroundColor" class="col-form-label">Background Color<span class="required">*</span></label>
                                <select asp-for="BackgroundColor" class="form-control">
                                    <option value="">-select-</option>
                                    <option class="p-2 bg-primary text-white" value="primary">primary</option>
                                    <option class="p-2 bg-secondary text-white" value="secondary">secondary</option>
                                    <option class="p-2 bg-success text-white" value="success">success</option>
                                    <option class="p-2 bg-danger text-white" value="danger">danger</option>
                                    <option class="p-2 bg-warning text-dark" value="warning">warning</option>
                                    <option class="p-2 bg-info text-white" value="info">info</option>
                                    <option class="p-2 bg-light text-dark" value="light">light</option>
                                    <option class="p-2 bg-dark text-white" value="dark">dark</option>
                                    <option class="p-2 bg-white text-dark" value="white">white</option>
                                    <option class="p-2 bg-transparent text-dark" value="transparent">transparent</option>
                                </select>
                                <span asp-validation-for="BackgroundColor" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label asp-for="Heading" class="col-form-label">Heading<span class="required">*</span></label>
                                <input asp-for="Heading" class="form-control" placeholder="Heading" autocomplete="on" />
                                <span asp-validation-for="Heading" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="custom-control custom-switch custom-switch-on-primary">
                                    <input asp-for="ShowHeading" class="custom-control-input">
                                    <label asp-for="ShowHeading" class="custom-control-label">Show Heading</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="custom-control custom-switch custom-switch-on-primary">
                                    <input asp-for="BlinkHeading" class="custom-control-input">
                                    <label asp-for="BlinkHeading" class="custom-control-label">Blink Heading</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label asp-for="Message" class="col-form-label">Message<span class="required">*</span></label>
                                <input asp-for="Message" class="form-control" placeholder="Message" autocomplete="on" />
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="StartDate0" class="col-form-label">Start Date<span class="required">*</span></label>
                                <input type="text" class="form-control bg-white" id="StartDate0" placeholder="dd-mm-yyyy" readonly="readonly">
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="EndDate0" class="col-form-label">End Date<span class="required">*</span></label>
                                <input type="text" class="form-control bg-white" id="EndDate0" placeholder="dd-mm-yyyy" readonly="readonly">
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <div class="custom-control custom-switch custom-switch-on-primary">
                                    <input asp-for="IsActive" class="custom-control-input">
                                    <label asp-for="IsActive" class="custom-control-label">Active</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btnSave" type="button" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </form>
    </div>
</div>