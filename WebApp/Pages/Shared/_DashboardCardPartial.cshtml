@model List<DashboardStatsVM>
@if (Model != null && Model.Count > 0)
{
    <div class="row">
        @foreach (var card in Model)
        {
            <div class="col-md-6 col-sm-12">
                <div class="card">
                    <div class="card-header bg-theme-primary text-white">
                        <h3 class="card-title">@card.CardHeader</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered table-striped">
                                <tbody>
                                    <tr>
                                        <th></th>
                                        <th class="text-center">Total</th>
                                        <th class="text-center">Active/Approved</th>
                                    </tr>
                                    @foreach (var row in card.Rows)
                                    {
                                        <tr>
                                            <td>@row.DisplayText</td>
                                            <td class="text-center font-weight-bolder">
                                                <a asp-page="@row.TargetUrl" target="_blank">@row.Count</a>
                                            </td>
                                            <td class="text-center font-weight-bolder">
                                                <a asp-page="@row.TargetUrl" target="_blank">@row.Count1</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Stats not found</p>
}