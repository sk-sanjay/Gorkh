@model SpecificationsDTO
<div class="modal fade" id="ManageModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="ManageModalTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form method="post" asp-page-handler="Manage">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="CreatedBy" />
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ManageModalTitle">Manage Specifications</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="SpecfName" class="col-form-label">Field Name<span class="required">*</span></label>
                        <input asp-for="SpecfName" class="form-control" placeholder="Field Name" autocomplete="on" />
                        <span asp-validation-for="SpecfName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TextType" class="col-form-label">Data Type<span class="required">*</span></label>
                        <select asp-for="TextType" class="form-control">
                            <option value="String">String</option>
                            <option value="Number">Number</option>
                            <option value="Date">Date</option>
                        </select>
                        @*<span asp-validation-for="TextType" class="text-danger"></span>*@
                    </div>
                    @*<div class="form-group">
                        <label asp-for="TextType" class="col-form-label">Text Type<span class="required">*</span></label>
                        <input asp-for="TextType" class="form-control" placeholder="Text Type" autocomplete="on" />
                        <span asp-validation-for="TextType" class="text-danger"></span>
                    </div>*@
                    <div class="form-group">
                        <div class="custom-control custom-switch custom-switch-on-primary">
                            <input asp-for="IsCommon" class="custom-control-input">
                            <label asp-for="IsCommon" class="custom-control-label">Common</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-switch custom-switch-on-primary">
                            <input asp-for="IsActive" class="custom-control-input">
                            <label asp-for="IsActive" class="custom-control-label">Active</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btnSave" type="button" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </form>
    </div>
</div>