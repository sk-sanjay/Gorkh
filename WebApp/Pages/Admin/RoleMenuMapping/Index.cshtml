@page
@model IndexModel
@{
    ViewData["Title"] = "Role Menus Mapping";
}
@section Styles{
    <link href="~/plugins/treeview/treeview.css" rel="stylesheet" />
}
<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title font-weight-bold">Role Menus Mapping</h3>
            @*<a class="btn btn-sm btn-secondary float-right" asp-page="Index"><i class="fa fa-arrow-left"></i> Back</a>
                <div class="clearfix"></div>*@
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="lstRole" class="col-form-label">Role</label>
                        <select id="lstRole" class="form-control" asp-items="ViewBag.Roles">
                            <option value="">-select-</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Menus</label>
                        <ul id="tree1">
                            <li class="root-branch">
                                <div class="custom-checkbox d-inline-block ml-4">
                                    <input type="checkbox" class="custom-control-input d-inline-block" id="chkAll" name="chkAll" />
                                    <label class="custom-control-label adjusttop d-inline-block" for="chkAll">Select All</label>
                                </div>
                                <partial name="_MenuTreeCheckboxPartial" model="@ViewBag.Menus" />
                            </li>
                        </ul>
                    </div>
                    <div class="form-group">
                        <button id="btnSave" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts{
    <script src="~/js/custom/RoleMenuMapping.js" asp-append-version="true"></script>
    <script src="~/plugins/treeview/treeview.js" asp-append-version="true"></script>
}