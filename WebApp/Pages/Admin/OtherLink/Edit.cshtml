@page "{id:int}"
@model WebApp.Pages.Admin.OtherLink.EditModel
@{
    ViewData["Title"] = "Edit";
}
@section Styles
{
    <link href="~/plugins/summernote/summernote-bs4.css" rel="stylesheet" asp-append-version="true" />
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title float-left">Update Headings</h3>
                        <div class="btn-group btn-group-sm float-right">
                            @*<button class="btn btn-sm btn-danger" data-toggle="modal" data-target="#confirmationModal"><i class="fa fa-times"></i> Delete</button>&nbsp;*@
                            <a class="btn btn-sm btn-secondary float-right" asp-page="Index"><i class="fa fa-arrow-left"></i> Back</a>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                    <div class="card-body">
                        @*<form method="post" asp-page-handler="Delete">
                            <input type="hidden" asp-for="otherlinkdto.Id" />
                            <partial name="_ConfirmationModalPartial" model=@("Are you sure you want to delete this item? This can not be undone.") />
                        </form>*@
                        <form method="post">
                            <input type="hidden" asp-for="otherlinkdto.Id" />

                            <div class="form-group form-row">
                                <label asp-for="otherlinkdto.EnglishHeadingName" class="col-md-3 col-lg-2" style="margin-top: 6px;color:#925959;font-weight:500">English Heading<span class="required">*</span></label>
                                <div class="col-md-9 col-lg-12">
                                    <input asp-for="otherlinkdto.EnglishHeadingName" id="txtenglishname" class="form-control" placeholder="English Name" autocomplete="on" readonly />
                                    <span asp-validation-for="otherlinkdto.EnglishHeadingName" class="text-danger"></span>
                               
                                </div>

                            </div>
                            <div class="form-group form-row">
                                <label class="col-md-3 col-lg-2" style="margin-top: 6px;color:#925959;font-weight:500">Page Content<span class="required">*</span></label>
                                <div class="col-md-9 col-lg-12">
                                    <textarea class="form-control" asp-for="otherlinkdto.EnglishContentDesc" cols="30" rows="3" id="EnglishContentDesc"></textarea>
                                   
                                </div>
                            </div>
                            <div class="form-group form-row">
                                <label class="col-md-3 col-lg-2"></label>
                                <div class="col-md-9 col-lg-10">
                                    <div class="custom-control custom-checkbox mr-sm-2">
                                        <input asp-for="otherlinkdto.Show" class="custom-control-input">
                                        <label asp-for="otherlinkdto.Show" class="custom-control-label">Active</label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group offset-md-3 offset-lg-2">
                                <div class="btn-group">
                                    <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Save</button>
                                    <a class="btn btn-secondary" asp-page="Index"><i class="fa fa-arrow-left"></i> Back</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts
    {
    <script src="~/plugins/summernote/summernote-bs4.min.js" asp-append-version="true"></script>
    <script type="text/javascript" asp-append-version="true">
        var today = new Date();
        $('#ShowPressreleaseDate').daterangepicker({
            "showDropdowns": true, //to show dropdowns for Month and year
            "singleDatePicker": true, //to show single date picker not range
            "locale": {
                "format": "DD-MM-YYYY",
                "separator": " - "
            },
            "minDate": today,
        },
            function (start, end, label) {
                $('#otherlinkdto_ShowPressreleaseDate').val(start.format('YYYY-MM-DDThh:mm'));
            });
        $("#EnglishContentDesc").summernote({
            height: 300,                 // set editor height
            minHeight: null,             // set minimum height of editor
            maxHeight: null             // set maximum height of editor
        });
        $("#HindiContentDesc").summernote({
            height: 300,                 // set editor height
            minHeight: null,             // set minimum height of editor
            maxHeight: null             // set maximum height of editor
        });

    </script>

    <script type="text/javascript" asp-append-version="true">
        $(document).ready(function () {
            //< !--Allow only alphanumeric-- >
            $('#txtenglishname').keyup(function () {
                if (this.value.match(/[^a-zA-Z0-9 ]/g)) {
                    this.value = this.value.replace(/[^a-zA-Z0-9 ]/g, '');
                }
            });
            $('#txtenglishname').focusout(function () {
                this.value = this.value.trim();
            });

            $('#txthindiname').keyup(function () {
                if (this.value.match(/[^a-zA-Z0-9 ]/g)) {
                    this.value = this.value.replace(/[^a-zA-Z0-9 ]/g, '');
                }
            });
            $('#txthindiname').focusout(function () {
                this.value = this.value.trim();
            });
        });
    </script>
}
