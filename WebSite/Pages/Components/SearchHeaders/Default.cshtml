@model List<DropdownVM>
@if (Model?.Count > 0)
{
    <div class="search-main">
        <input type="text" id="txtkeyword" name="" placeholder="Search Machines & Equipment...">
        <select class="" name="" id="ddlCategoryHeader">
            <option value="">Select a Category</option>
            @foreach (var item in Model)
            {
                <option value="@item.Id">@item.Text</option>
            }
        </select>
        <button type="button" name="button" id="btnSearch1"><i class="icon-icon-5"></i></button>
    </div>
}