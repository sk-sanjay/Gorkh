<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=0, shrink-to-fit=no">
    <title>@ViewData["Surplus : Home"]</title>
    <link rel="shortcut icon" href="~/assets/images/favicon.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/assets/css/icon-moon.css">
    <link rel="stylesheet" href="~/assets/css/custom.css">
    @await RenderSectionAsync("Styles", required: false)
    @*<link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet" asp-append-version="true" integrity="sha256-S75GkiFesBYApapc9z963NK1rTHVfL+uT+kz147UnOs=" crossorigin="anonymous">*@
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet" asp-append-version="true" integrity="sha256-c73jiDwXcWz826zUVPtiptGIkCo49+pQ1w7JnOtEfms=" crossorigin="anonymous">

    <link rel="stylesheet" href="~/assets/css/slick.css">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

</head>
<body>
    <header class="site-header alt">
        <div class="header-wrap">
            <div class="container">
                <div class="header-main">
                    <div class="logo">
                        <a href="/index"><img src="~/assets/images/logo.png" alt=""></a>
                    </div>
                   
                </div>
            </div>
        </div>
    </header>

    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="site-footer">
        <div class="footer-top">
            <div class="container">
                <h2>Sell and Buy On Surplus Platform</h2>
            </div>
        </div>
        <div class="footer-mid">
            <div class="container">
                <div class="row">
                    <div class="col-lg-10">
                        <div class="footer-mid-left">
                            <h2>How does Surplus Platform function works?</h2>
                            <div class="">
                                <ul>
                                    <li><a href="#">About Us</a></li>
                                    <li><a href="#">Wanted Equipment</a></li>
                                    <li><a href="#">Service Charges</a></li>
                                </ul>
                                <ul>
                                    <li><a href="#">Benefits for Sellers</a></li>
                                    <li><a href="#">Benefits for Buyers</a></li>
                                    <li><a href="#">Buy & Seller Agreement</a></li>
                                </ul>
                                <ul>
                                    <li><a href="#">Contact Us</a></li>
                                    <li><a href="#">Support Email ID/Contact</a></li>
                                    <li><a href="#">Website Policy</a></li>
                                </ul>
                                <ul>
                                    <li><a href="#">Privacy Policy</a></li>
                                    <li><a href="~/assets/pdfs/SP_USER_AGREEMENT.pdf" target="_blank">Terms & Conditions</a></li>
                                    <li><a href="#">Disclaimer</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="footer-mid-right">
                            <h2 style="text-transform:uppercase;">Follow Us</h2>
                            <ul>
                                <li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-linkedin" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-youtube-play" aria-hidden="true"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <div class="container">
                <div class="footer-bottom-main">
                    <p>© 2021 Surplus Platform</p>
                    <p>Design by PECS</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/plugins/jquery-validate/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/plugins/jquery-validate/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>

    <script src="~/assets/js/owl.carousel.min.js"></script>
    <script src="~/assets/js/jquery.marquee.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/assets/js/custom.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/assets/js/slick.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>


    <script type="text/javascript">
        $('.slider-for').slick({
            slidesToShow: 1,
            slidesToScroll: 1,
            arrows: true,
            //fade: true,
            asNavFor: '.slider-nav'
        });
        $('.slider-nav').slick({
            slidesToShow: 4,
            slidesToScroll: 1,
            asNavFor: '.slider-for',
            //dots: true,
            arrows: false,
            //centerMode: true,
            focusOnSelect: true
        });
    </script>
    <script type="text/javascript">
        $('.modal').on('shown.bs.modal', function (e) {
            $('.slider-for, .slider-nav').slick('setPosition');
            $('.wrap-modal-slider').addClass('open');
        })
        $('.slider-for').slick({
            slidesToShow: 1,
            slidesToScroll: 1,
            arrows: true,
            //fade: true,
            asNavFor: '.slider-nav'
        });
        $('.slider-nav').slick({
            slidesToShow: 4,
            slidesToScroll: 1,
            asNavFor: '.slider-for',
            //dots: true,
            arrows: false,
            //centerMode: true,
            focusOnSelect: true
        });

        $(document).ready(function () {
            $('.selectInd').select2({
                placeholder: "Select a Industry",
                allowClear: true
            });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
